rcmd - f : open -a /Applications/Firefox\ Developer\ Edition.app
rcmd - z : open -a /Applications/Zotero.app

# ralt - a : ~/dev/school/coursemanager/main.fish
ralt - a : wezterm-gui -- notes
ralt - c : alacritty -e sklib
ralt - s : open -a /Applications/SoundSource.app/Contents/MacOS/SoundSource

:: default

:: gmail @
rcmd - g ; gmail
gmail < escape ; default
gmail < 1 : open "https://mail.google.com/mail/u/0/#inbox";\
			skhd -k "escape";
gmail < 2 : open "https://mail.google.com/mail/u/1/#inbox";\
			skhd -k "escape";
gmail < 3 : open "https://mail.google.com/mail/u/2/#inbox";\
			skhd -k "escape";
gmail < 4 : open "https://mail.google.com/mail/u/3/#inbox";\
			skhd -k "escape";

# YABAI CONFIG

alt + shift - space : yabai -m window --toggle float;\
					  yabai -m window --grid 4:4:1:1:2:2;\

lalt + lcmd - left : yabai -m window --focus west
lalt + lcmd - right : yabai -m window --focus east
lalt + lcmd - up : yabai -m window --focus north
lalt + lcmd - down : yabai -m window --focus south

alt + shift - left : yabai -m window --warp west || yabai -m window --display west
alt + shift - right : yabai -m window --warp east || yabai -m window --display east
alt + shift - up : yabai -m window --warp north
alt + shift - down : yabai -m window --warp south 

alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2 
alt - 3 : yabai -m space --focus 3 
alt - 4 : yabai -m space --focus 4 
alt - 5 : yabai -m space --focus 5 
alt - 6 : yabai -m space --focus 6 
alt - 7 : yabai -m space --focus 7 
alt - 8 : yabai -m space --focus 8 
alt - 9 : yabai -m space --focus 9 

alt + shift - 1 : yabai -m window --space 1
alt + shift - 2 : yabai -m window --space 2
alt + shift - 3 : yabai -m window --space 3
alt + shift - 4 : yabai -m window --space 4
alt + shift - 5 : yabai -m window --space 5
alt + shift - 6 : yabai -m window --space 6
alt + shift - 7 : yabai -m window --space 7
alt + shift - 8 : yabai -m window --space 8
alt + shift - 9 : yabai -m window --space 9
